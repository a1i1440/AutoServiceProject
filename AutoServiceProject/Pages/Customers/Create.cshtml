
@page
@model AutoServiceProject.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Add new customer";
}

<h2>Yeni Müştəri Əlavə Et</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Customer.FullName"></label>
        <input asp-for="Customer.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Customer.Phone"></label>
        <input asp-for="Customer.Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Customer.Email"></label>
        <input asp-for="Customer.Email" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="Customer.IsPremium" class="form-check-input" />
        <label asp-for="Customer.IsPremium" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Əlavə Et</button>
</form>
