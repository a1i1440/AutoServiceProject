@page "{id:int}"
@model AutoServiceProject.Pages.Profile.EditOrderModel
@{
    ViewData["Title"] = "Edit Order";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4 no-hover">
                <h4 class="mb-4 text-center">Edit Order</h4>
                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Order.Quantity"></label>
                        <input asp-for="Order.Quantity" class="form-control" />
                        <span asp-validation-for="Order.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Order.Address"></label>
                        <input asp-for="Order.Address" class="form-control" />
                        <span asp-validation-for="Order.Address" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Order.Id" />
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                    <a asp-page="/Profile/Orders" class="btn btn-secondary w-100 mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
