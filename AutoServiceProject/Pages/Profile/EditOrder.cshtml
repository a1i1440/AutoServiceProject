@page "{id:int}"
@model AutoServiceProject.Pages.Profile.EditOrderModel
@{
    ViewData["Title"] = "Edit Order";
}
<h2 class="mb-4">Edit Order</h2>
<form method="post">
    <div class="form-group mb-3">
        <label>Quantity</label>
        <input asp-for="Order.Quantity" class="form-control" />
        <span asp-validation-for="Order.Quantity" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Address</label>
        <input asp-for="Order.Address" class="form-control" />
        <span asp-validation-for="Order.Address" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Order.Id" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="./Orders" class="btn btn-secondary ms-2">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}