@page
@model AutoServiceProject.Pages.Profile.OrdersModel
@{
    ViewData["Title"] = "My Orders";
}

<h2 class="mb-4">My Orders</h2>

<div class="d-flex justify-content-center gap-3 mb-4">

    <button class="btn btn-outline-dark status-filter-btn active" data-status="all">All</button>
    <button class="btn btn-outline-success status-filter-btn" data-status="Completed">Completed</button>
    <button class="btn btn-outline-danger status-filter-btn" data-status="Cancelled">Cancelled</button>
    <button class="btn btn-outline-primary status-filter-btn" data-status="InProgress">In Progress</button>
</div>

<div class="row g-4">
    @foreach (var order in Model.Orders)
    {
        var effectiveStatus = (order.Status == "Pending" || order.Status == "Active") ? "InProgress" : order.Status;

        <div class="col-12 col-md-6 col-lg-4 order-item" data-status="@effectiveStatus">
            <div class="card shadow-sm order-card d-flex flex-column h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="fw-bold">@order.SparePart.Name</h5>
                        <p class="mb-1"><strong>Quantity:</strong> @order.Quantity</p>
                        <p class="mb-1"><strong>Address:</strong> @order.Address</p>
                        <p class="mb-3"><strong>Status:</strong> @order.Status</p>
                    </div>

                    <div class="mt-auto">
                        @if (order.Status == "Completed" || order.Status == "Cancelled")
                        {
                            <a href="/Profile/Receipt/@order.Id" class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-receipt me-1"></i> View Receipt
                            </a>
                        }
                        else
                        {
                            <div class="alert alert-info text-center py-2 mb-3 small">
                                <i class="bi bi-hourglass-split me-1"></i> Your order is being processed and will be updated shortly.
                            </div>
                        }

                        @if (order.Status == "Pending" || order.Status == "Active")
                        {
                            <a class="btn btn-outline-dark w-100 mb-2" asp-page-handler="Edit" asp-route-id="@order.Id">Edit</a>
                            <form method="post" asp-page-handler="Cancel" asp-route-id="@order.Id">
                                <button type="submit" class="btn btn-outline-danger w-100">Cancel</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll('.status-filter-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                document.querySelectorAll('.status-filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                const selected = this.getAttribute('data-status');
                document.querySelectorAll('.order-item').forEach(card => {
                    const status = card.getAttribute('data-status');
                    card.style.display = (selected === "all" || selected === status) ? "block" : "none";
                });
            });
        });
    </script>
}
