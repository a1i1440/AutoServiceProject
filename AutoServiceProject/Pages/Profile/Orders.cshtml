@page
@model AutoServiceProject.Pages.Profile.OrdersModel
@{
    ViewData["Title"] = "My Orders";
}
<h2 class="mb-4">My Orders</h2>
<div class="row g-4">
    @foreach (var order in Model.Orders)
    {
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="card-title">@order.SparePart.Name</h6>
                    <p class="card-text mb-1"><strong>Quantity:</strong> @order.Quantity</p>
                    <p class="card-text mb-1"><strong>Address:</strong> @order.Address</p>
                    <p class="card-text mb-2"><strong>Status:</strong> @order.Status</p>
                    @if (order.Status == "Pending")
                    {
                        <div class="mt-3">
                            <a asp-page="EditOrder" asp-route-id="@order.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                            <a asp-page="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <small class="text-muted">Order is being processed</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>