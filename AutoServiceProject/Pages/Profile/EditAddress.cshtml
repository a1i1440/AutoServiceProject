@page "{id:int}"
@model AutoServiceProject.Pages.Profile.EditAddressModel
@{
    ViewData["Title"] = "Edit Address";
}
<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <h4 class="mb-4 text-primary">✏️ Edit Address</h4>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Address.Title" class="form-label"></label>
                    <input asp-for="Address.Title" class="form-control" />
                    <span asp-validation-for="Address.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address.FullAddress" class="form-label"></label>
                    <textarea asp-for="Address.FullAddress" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Address.FullAddress" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-page="MyAddresses" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
