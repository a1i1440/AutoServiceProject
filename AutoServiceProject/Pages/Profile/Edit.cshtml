@page
@model AutoServiceProject.Pages.Profile.EditModel
@{
    ViewData["Title"] = "Edit Profile";
}

<h2 class="text-center mb-4">Edit Profile</h2>

<form method="post" class="mx-auto" style="max-width: 500px;">
    <div class="mb-3">
        <label asp-for="Input.FullName" class="form-label">Full Name</label>
        <input asp-for="Input.FullName" class="form-control" />
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Address" class="form-label">Address</label>
        <input asp-for="Input.Address" class="form-control" />
        <span asp-validation-for="Input.Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    <a asp-page="./Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
