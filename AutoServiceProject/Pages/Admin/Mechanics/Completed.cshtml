@page
@model AutoServiceProject.Pages.Mechanic.CompletedModel
@{
    ViewData["Title"] = "Completed Requests";
    Layout = "_Layout";
}

<section class="py-5">
    <div class="container">
        <h3 class="fw-bold mb-4">✅ Completed Requests</h3>

        @if (Model.CompletedRequests.Any())
        {
            <table class="table table-striped table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th>👤 Customer</th>
                        <th>🚗 Car</th>
                        <th>🔧 Problem</th>
                        <th>🛠️ Service</th>
                        <th>📅 Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.CompletedRequests)
                    {
                        <tr>
                            <td>@(r.User?.FullName ?? r.User?.Email ?? "Unknown")</td>
                            <td>@r.CarBrand</td>
                            <td>@r.Description</td>
                            <td>@r.SelectedService</td>
                            <td>@r.RequestDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-secondary text-center">
                <i class="bi bi-check2-circle fs-1 d-block mb-2"></i>
                No completed requests yet.
            </div>
        }
    </div>
</section>
