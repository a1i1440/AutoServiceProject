@page "{id:int}"
@model AutoServiceProject.Pages.Admin.Mechanics.EditModel

<h3>Edit Mechanic</h3>

<form method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="Mechanic.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Mechanic.Age" class="form-control" />
    </div>
    <div class="form-group">
        <label>Specialization Brand</label>
        <input asp-for="Mechanic.SpecializationBrand" class="form-control" />
    </div>
    <input type="hidden" asp-for="Mechanic.Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
