@page "{id:int}"
@model AutoServiceProject.Pages.Admin.Mechanics.EditModel

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0 rounded-4 no-hover">
                    <div class="card-header bg-dark text-white text-center rounded-top-4">
                        <h4 class="mb-0">✏️ Edit Mechanic</h4>
                    </div>
                    <div class="card-body p-4">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input asp-for="Mechanic.FullName" class="form-control" placeholder="John Doe" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Age</label>
                                <input asp-for="Mechanic.Age" class="form-control" type="number" min="18" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Specialization Brand</label>
                                <input asp-for="Mechanic.SpecializationBrand" class="form-control" placeholder="e.g. Toyota" />
                            </div>
                            <input type="hidden" asp-for="Mechanic.Id" />
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary w-50">💾 Save</button>
                                <a asp-page="./Index" class="btn btn-outline-secondary w-25">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
