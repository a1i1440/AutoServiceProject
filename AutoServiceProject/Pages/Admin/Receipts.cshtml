@page
@model AutoServiceProject.Pages.Admin.ReceiptsModel
@{
    ViewData["Title"] = "Receipts";
}

<section class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5 display-6">📄 All Order Receipts</h2>

        @if (Model.Orders.Any())
        {
            <div class="row g-4">
                @foreach (var order in Model.Orders)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card shadow-sm border-0 h-100 receipt-card">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="fw-bold mb-2">Order #@order.Id</h5>
                                    <p class="mb-1"><strong>User:</strong> @order.User.FullName</p>
                                    <p class="mb-1"><strong>Part:</strong> @order.SparePart.Name</p>
                                    <p class="mb-1"><strong>Quantity:</strong> @order.Quantity</p>
                                    <p class="mb-1">
                                        <strong>Status:</strong>
                                        <span class="badge bg-@GetBadgeColor(order.Status)">
                                            @order.Status
                                        </span>
                                    </p>
                                    <p class="mb-3"><strong>Total:</strong> @order.TotalPrice.ToString("C")</p>
                                    <p class="text-muted small">🗓 @order.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                                </div>
                                <a href="/Profile/Receipt/@order.Id" class="btn btn-outline-primary w-100 mt-3">
                                    <i class="bi bi-receipt me-1"></i> View Receipt
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="d-flex flex-column align-items-center justify-content-center text-center no-orders-card">
                <i class="bi bi-folder-x fs-1 text-danger mb-3"></i>
                <h5 class="fw-bold">No Orders Found</h5>
                <p class="text-muted mb-0">There are currently no <strong>completed</strong> or <strong>cancelled</strong> orders to display.</p>
            </div>

        }
    </div>
</section>

<style>
    .receipt-card {
        border-radius: 16px;
        background-color: #ffffff;
        transition: all 0.3s ease;
        border: 1px solid #dee2e6;
    }

    .receipt-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
    }

    .receipt-card .btn {
        transition: 0.3s ease;
    }

    .receipt-card .btn:hover {
        background-color: #212529;
        color: #fff;
    }
</style>

@functions {
    string GetBadgeColor(string status) =>
        status == "Completed" ? "success" :
        status == "Cancelled" ? "danger" : "secondary";
}
