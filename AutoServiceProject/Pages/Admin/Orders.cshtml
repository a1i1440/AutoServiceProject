@page
@model AutoServiceProject.Pages.Admin.OrdersModel




<h3>Aktiv Sifarişlər</h3>



<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Part</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Update</th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders.Where(o => o.Status != "Delivered"))
        {
            <tr>
                <td>@order.User.FullName</td>
                <td>@order.SparePart.Name</td>
                <td>@order.Quantity</td>
                <td>@order.Status</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <select name="newStatus" class="form-select">
                            <option value="Pending" selected="@(order.Status == "Pending" ? "selected" : null)">Pending</option>
                            <option value="On The Way" selected="@(order.Status == "On The Way" ? "selected" : null)">On The Way</option>
                            <option value="Delivered" selected="@(order.Status == "Delivered" ? "selected" : null)">Delivered</option>
                        </select>
                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                    </form>
                </td>
                <td>
                    <a asp-page="/Admin/OrderDetails" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
