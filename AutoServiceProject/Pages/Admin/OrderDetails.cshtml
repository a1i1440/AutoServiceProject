@page "{id:int}"
@model AutoServiceProject.Pages.Admin.OrderDetailsModel

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm rounded-4 no-hover">
                    <div class="card-header bg-dark text-white text-center rounded-top-4">
                        <h4 class="mb-0">📄 Order Details</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered text-center align-middle">
                            <tr>
                                <th class="bg-light">👤 User</th>
                                <td>@Model.Order.User.FullName</td>
                            </tr>
                            <tr>
                                <th class="bg-light">🔢 Quantity</th>
                                <td>@Model.Order.Quantity</td>
                            </tr>
                            <tr>
                                <th class="bg-light">⚙️ Part</th>
                                <td>@Model.Order.SparePart.Name</td>
                            </tr>
                            <tr>
                                <th class="bg-light">📍 Address</th>
                                <td>@Model.Order.User.Address</td>
                            </tr>
                            <tr>
                                <th class="bg-light">📌 Status</th>
                                <td>
                                    <span class="badge
                                        @(Model.Order.Status == "Pending" ? "bg-warning text-dark" :
                                          Model.Order.Status == "Active" ? "bg-success" :
                                          Model.Order.Status == "Completed" ? "bg-primary" : "bg-secondary")">
                                        @Model.Order.Status
                                    </span>
                                </td>
                            </tr>
                        </table>
                        <div class="text-end mt-4">
                            <a href="/Admin/Orders" class="btn btn-outline-secondary">← Back to Orders</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
