@page
@model AutoServiceProject.Pages.Admin.ServiceRequestsModel
@{
    ViewData["Title"] = "Service Requests";
}

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4"><i class="bi bi-list-check"></i> Service Requests</h2>

        @if (Model.Requests.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered border-secondary">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>User</th>
                            <th>Brand</th>
                            <th>Description</th>
                            <th>Service</th>
                            <th>Mechanic</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var r in Model.Requests)
                        {
                            <tr style="background-color: #f9f9f9;">
                                <td>@r.User.FullName</td>
                                <td>@r.CarBrand</td>
                                <td>@r.Description</td>
                                <td>@r.SelectedService</td>
                                <td>
                                    @if (r.MechanicUser != null)
                                    {
                                        @r.MechanicUser.FullName
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Unassigned</span>
                                    }
                                </td>
                                <td>@r.RequestDate.ToShortDateString()</td>
                                <td>
                                    @if (r.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (r.Status == "In Progress")
                                    {
                                        <span class="badge bg-primary">In Progress</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                No service requests found.
            </div>
        }
    </div>
</section>
