@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="card shadow border-1 rounded-4 p-5 text-center ">
        <h1 class="display-5 fw-bold mb-3">Welcome to AutoService</h1>
        <p class="lead text-muted">Efficient. Reliable. Affordable Car Services.</p>
        <a href="/Service/Create" class="btn btn-dark mt-4 px-4 py-2">Request a Service</a>
    </div>
</div>

<div class="container py-5">
    <h2 class="text-center mb-4 text-decoration-underline">Our Services</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow border-1 h-100">
                <div class="card-body">
                    <h5 class="card-title">Painting</h5>
                    <p class="card-text">Professional car painting to make your car shine like new.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow border-1 h-100">
                <div class="card-body">
                    <h5 class="card-title">Part Replacement</h5>
                    <p class="card-text">High quality parts and certified mechanics for any replacements.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow border-1 h-100">
                <div class="card-body">
                    <h5 class="card-title">Custom Requests</h5>
                    <p class="card-text">You describe it, we fix it. Tailored service to your needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container text-center mt-6 mb-6">
    <h3>Need Help?</h3>
    <p>Contact our support or browse available spare parts.</p>
    <a href="/Store" class="btn btn-outline-secondary">Go to Store</a>
    <a href="/Service/Create" class="btn btn-outline-secondary">Request Service</a>
</div>