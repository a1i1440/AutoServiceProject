@using Microsoft.AspNetCore.Identity
@using AutoServiceProject.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor
@{
    AppUser user = null;
    string imageUrl = "/images/DefaultProfile.png";

    if (SignInManager.IsSignedIn(User))
    {
        user = await UserManager.GetUserAsync(User);
        if (!string.IsNullOrEmpty(user?.ProfileImageUrl))
        {
            imageUrl = user.ProfileImageUrl;
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoService</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoServiceProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-link:hover {
            color: black !important;
        }

        .dropdown-item:hover {
            background-color: black !important;
            color: white !important;
        }

        .modal-content {
            border-radius: 8px;
        }

        .custom-back-button {
            display: inline-flex;
            align-items: center;
            background-color: #f8f9fa;
            color: #333;
            border: 1px solid #dee2e6;
            padding: 8px 14px;
            font-weight: 500;
            font-size: 15px;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.25s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

            .custom-back-button:hover {
                background-color: #e9ecef;
                color: #000;
                transform: translateX(-2px);
                text-decoration: none;
            }

            .custom-back-button i {
                transition: transform 0.25s ease;
            }

            .custom-back-button:hover i {
                transform: translateX(-3px);
            }
    </style>
</head>
<body class="@ViewData["BodyClass"]">
    @if (!(Context.Request.Path.Value.Contains("/Identity/Account/Login") || Context.Request.Path.Value.Contains("/Identity/Account/Register")))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top shadow">
                <div class="container">
                    <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index" style="color: #FFFFFF; font-size: 1.5rem;">
                        <i class="bi bi-tools me-2"></i>AutoService
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link text-light" asp-page="/Index">Home</a></li>
                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item"><a class="nav-link text-light" asp-page="/Store/Index">Store</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Profile/Orders">My Orders</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Service/Create">Service</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Profile/MyServices">My Services</a></li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="ordersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Orders
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                                        <li><a class="dropdown-item" asp-page="/Admin/PendingOrders">Pending Orders</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Orders">Active Orders</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/CompletedOrders">Completed Orders</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Inventory/Index">Inventory</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Admin/Dashboard">Admin Panel</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Admin/Mechanics/Index">Mechanics</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Admin/Users">Users</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Admin/ServiceRequests">Service Requests</a></li>
                            }
                            @if (User.IsInRole("Mechanic"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/Admin/Mechanics/Dashboard">Mechanic Requests</a></li>
                                <li class="nav-item"><a class="nav-link" asp-page="/Admin/Mechanics/Completed">Completed</a></li>
                            }
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <button class="btn p-0 border-0 bg-transparent" type="button" data-bs-toggle="modal" data-bs-target="#profileModal">
                                        <img src="@imageUrl" alt="Profile" class="rounded-circle" style="width: 35px; height: 35px; object-fit: cover;" />
                                    </button>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link text-light" asp-page="/Login">Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="pb-3">
            <div style="height: 60px;"></div>

            @{
                var path = Context.Request.Path.Value.ToLower();
                var showBackButton = !path.Contains("/index")
                && !path.Contains("/login")
                && !path.Contains("/register")
                && !path.Contains("/logout")
                && !path.Contains("/admin/dashboard")
                && !path.Contains("/identity");

                var backButtonPages = new[] {
        "/store/details", "/store/cart", "/profile/orders",
        "/profile/myservices", "/service/create",
        "/inventory/edit", "/profile/index"
        };

                if (backButtonPages.Any(p => path.Contains(p)) && showBackButton)
                {
                    <div class="mb-3 mt-4 ms-4">
                        <a href="javascript:history.back()" class="custom-back-button">
                            <i class="bi bi-arrow-left me-2"></i> Back
                        </a>
                    </div>
                }
            }

            @RenderBody()
        </main>
    }
    else
    {
        @RenderBody()
    }

    @{
        var cartItemCount = Context.Session.GetInt32("CartCount") ?? 0;
    }

    <div id="floatingCart" style="position: fixed; bottom: 20px; right: 20px; z-index: 9999;">
        <a href="/Store/Cart" class="btn btn-outline-dark d-flex align-items-center justify-content-center position-relative" style="width: 60px; height: 60px; border-radius: 50%;">
            <i class="bi bi-cart3 fs-4"></i>
            @if (cartItemCount > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark">
                    @(cartItemCount > 9 ? "9+" : cartItemCount.ToString())
                </span>
            }
        </a>
    </div>

    <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-end">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-body p-4 text-center">
                    <img src="@imageUrl" class="rounded-circle shadow mb-3" style="width: 90px; height: 90px; object-fit: cover;" alt="Profile" />
                    <h5 class="fw-semibold">@user?.FullName</h5>
                    <p class="text-muted small">@user?.Email</p>

                    <div class="d-grid gap-2 mt-4">
                        <a href="/Profile/Index" class="btn btn-primary"><i class="bi bi-person-fill me-1"></i> View Profile</a>
                        <form method="post" asp-page="/Logout"><button type="submit" class="btn btn-danger">Logout</button></form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-center text-muted mt-5" style="position: fixed; bottom: 10px; width: 100%;">
        © 2025 - AutoService - <a href="/Privacy" class="text-muted">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        window.globalConnection = new signalR.HubConnectionBuilder()
            .withUrl("/apphub")
            .build();

        globalConnection.start()
            .then(() => {
                console.log("✅ Connected to AppHub");
                window.dispatchEvent(new Event("SignalRReady"));
            })
            .catch(err => console.error("❌ SignalR start error:", err));
    </script>
</body>
</html>
