@page "{id:int}"
@model AutoServiceProject.Pages.Inventory.DeleteModel
@{
    ViewData["Title"] = "Delete Part";
}

<h2>Delete Confirmation</h2>

<div>
    <h4>Are you sure you want to delete this part?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Part.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Part.Quantity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Part.Price ₼</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Part.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
