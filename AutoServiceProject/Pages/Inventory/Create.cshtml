@page
@model AutoServiceProject.Pages.Inventory.CreateModel
@{
    ViewData["Title"] = "Add New Part";
}

<h2>Add New Part</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Part.Name"></label>
        <input asp-for="Part.Name" class="form-control" placeholder="Part name" />
        <span asp-validation-for="Part.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Brand"></label>
        <input asp-for="Part.Brand" class="form-control" placeholder="e.g. BMW" />
        <span asp-validation-for="Part.Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Category"></label>
        <input asp-for="Part.Category" class="form-control" placeholder="e.g. Engine, Brakes" />
        <span asp-validation-for="Part.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Quantity"></label>
        <input asp-for="Part.Quantity" class="form-control" type="number" min="0" />
        <span asp-validation-for="Part.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Price"></label>
        <input asp-for="Part.Price" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Part.Price" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Part.InStock" class="form-check-input" />
        <label asp-for="Part.InStock" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
