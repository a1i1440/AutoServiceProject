@page
@model AutoServiceProject.Pages.Inventory.CreateModel
@{
    ViewData["Title"] = "Add New Part";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-sm border-0 rounded-4 no-hover">
                    <div class="card-header bg-dark text-white text-center rounded-top-4">
                        <h4 class="mb-0">⚙️ Add New Part</h4>
                    </div>
                    <div class="card-body p-4">
                        <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label asp-for="Part.Name" class="form-label">Part Name</label>
                                <input asp-for="Part.Name" class="form-control" placeholder="e.g. Oil Filter" required />
                                <span asp-validation-for="Part.Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Part.Brand" class="form-label">Brand</label>
                                <input asp-for="Part.Brand" class="form-control" placeholder="e.g. BMW" required />
                                <span asp-validation-for="Part.Brand" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Part.Category" class="form-label">Category</label>
                                <input asp-for="Part.Category" class="form-control" placeholder="e.g. Engine, Brakes" required />
                                <span asp-validation-for="Part.Category" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Part.Quantity" class="form-label">Quantity</label>
                                <input asp-for="Part.Quantity" class="form-control" type="number" min="0" required />
                                <span asp-validation-for="Part.Quantity" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Part.Price" class="form-label">Price ($)</label>
                                <input asp-for="Part.Price" class="form-control" type="number" step="0.01" min="0" required />
                                <span asp-validation-for="Part.Price" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Image</label>
                                <input type="file" name="ImageFile" class="form-control" />
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="Part.InStock" class="form-check-input" />
                                <label asp-for="Part.InStock" class="form-check-label">In Stock</label>
                            </div>

                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary w-50">💾 Save</button>
                                <a asp-page="Index" class="btn btn-outline-secondary w-25">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
