@page "{id:int}"
@model AutoServiceProject.Pages.Inventory.EditModel

<h2>Edit Spare Part</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Part.Id" />
    <input type="hidden" asp-for="Part.ImageUrl" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Part.Name" class="form-control" />
        <span asp-validation-for="Part.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Brand</label>
        <input asp-for="Part.Brand" class="form-control" />
        <span asp-validation-for="Part.Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Category</label>
        <input asp-for="Part.Category" class="form-control" />
        <span asp-validation-for="Part.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Part.Quantity" class="form-control" />
        <span asp-validation-for="Part.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Part.Price" class="form-control" />
        <span asp-validation-for="Part.Price" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label>Upload New Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Part.InStock" />
        <label class="form-check-label" asp-for="Part.InStock">
            In Stock
        </label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-page="./Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
