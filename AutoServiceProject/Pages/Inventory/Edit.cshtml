@page "{id:int}"
@model AutoServiceProject.Pages.Inventory.EditModel
@{
    ViewData["Title"] = "Edit Part";
}

<h2>Edit Part</h2>

<form method="post">
    <input type="hidden" asp-for="Part.Id" />

    <div class="form-group">
        <label asp-for="Part.Name"></label>
        <input asp-for="Part.Name" class="form-control" />
        <span asp-validation-for="Part.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Brand"></label>
        <input asp-for="Part.Brand" class="form-control" />
        <span asp-validation-for="Part.Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Category"></label>
        <input asp-for="Part.Category" class="form-control" />
        <span asp-validation-for="Part.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Quantity"></label>
        <input asp-for="Part.Quantity" class="form-control" />
        <span asp-validation-for="Part.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.Price"></label>
        <input asp-for="Part.Price" class="form-control" />
        <span asp-validation-for="Part.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Part.InStock"></label>
        <input asp-for="Part.InStock" class="form-check-input" type="checkbox" />
        <span asp-validation-for="Part.InStock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>