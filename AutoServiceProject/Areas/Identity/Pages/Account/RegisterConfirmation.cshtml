@page
@model AutoServiceProject.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmed";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg border-0 p-4 text-center" style="max-width: 500px; width: 100%;">
        <div class="mb-4">
            <i class="bi bi-envelope-check-fill text-success" style="font-size: 3rem;"></i>
        </div>
        <h3 class="mb-3 text-success">Registration Successful</h3>
        <p class="text-muted mb-4">
            We’ve sent a confirmation email to your inbox.<br />
            Please click the link inside to verify your email address.
        </p>
        <p class="text-muted small">
            Didn’t receive the email? Check your spam folder or try registering again later.
        </p>
        <a class="btn btn-dark mt-3" asp-page="/Account/Login">Go to Login</a>
    </div>
</div>
