@page
@model AutoServiceProject.Areas.Identity.Pages.Account.LoginModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
    ViewData["BodyClass"] = "login-background";
}

<div class="login-card text-white shadow p-4 rounded" style="width: 100%; max-width: 400px;">
    <div class="text-center mb-3">
        <i class="bi bi-person-circle fs-1"></i>
        
    </div>

    <form method="post">
        <div class="form-group mb-3">
            <input asp-for="Input.Email" class="form-control bg-dark text-white border-secondary" placeholder="Email ID" />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <input asp-for="Input.Password" class="form-control bg-dark text-white border-secondary" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
        </div>
        <button type="submit" class="btn btn-success w-100">LOGIN</button>
        <div class="text-center mt-3">
            <a asp-page="./Register"style="color: #ffffff; class="text-info">Don't have an account? <strong>Register</strong></a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
