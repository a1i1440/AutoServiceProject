@page
@model AutoServiceProject.Areas.Identity.Pages.Account.RegisterModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "login-background";
}
<div class="login-card text-white shadow p-4 rounded" style="width: 100%; max-width: 400px;">
    <div class="text-center mb-3">
        <i class="bi bi-person-plus-fill fs-1"></i>
    </div>
    <form method="post">
        <div class="form-group mb-3">
            <input asp-for="Input.FullName" class="form-control bg-dark text-white border-secondary" placeholder="Full Name" />
            <span asp-validation-for="Input.FullName" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <input asp-for="Input.Email" class="form-control bg-dark text-white border-secondary" placeholder="Email ID" />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <input asp-for="Input.Password" class="form-control bg-dark text-white border-secondary" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-white border-secondary" placeholder="Confirm Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>
        <button type="submit" class="btn btn-outline-light w-100">REGISTER</button>
        <div class="text-center mt-3">
            <a asp-page="./Login" class="text-info">Already have an account? <strong>Login</strong></a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}